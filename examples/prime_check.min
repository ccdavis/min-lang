// Check if a number is prime

func is_prime(n: int): bool {
	if n < 2 {
		return false;
	}
	if n == 2 {
		return true;
	}
	if n % 2 == 0 {
		return false;
	}

	for var i: int = 3; i * i <= n; i = i + 2 {
		if n % i == 0 {
			return false;
		}
	}

	return true;
}

print("Prime numbers up to 30:");
for var n: int = 2; n <= 30; n = n + 1 {
	if is_prime(n) {
		print(n);
	}
}
